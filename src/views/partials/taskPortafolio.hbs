{{#each tasks}}
<!-- Portfolio Modal -->
<div class="portfolio-modal modal fade" id="portfolioModal{{@index}}" tabindex="-1" lang="asd"
    aria-labelledby="portfolioModal{{@index}}" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pb-5">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Portfolio Modal - Title-->
                            <h3>Titulo</h3>
                            <div class="form-floating">
                                <textarea class="form-control" value="{{title}}" placeholder="Leave a comment here"
                                    id="editableInput"></textarea>
                                <label id= "titulo2"for="floatingTextarea">{{title}}</label>
                            </div>
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Text-->
                            <h3>Contenido</h3>
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                    style="height: 100px"></textarea>
                                <label id = "descripcion2"for="floatingTextarea2">{{description}}</label>
                            </div>
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Image-->
                            <h3>Seleccione una imagen para cargar</h3>
                            <input type="file" id="imagen">
                            <br>
                            <img id="imagen-cargada" src="https://via.placeholder.com/150" alt="Imagen predeterminada">
                            <br>
                            <button class="btn btn-danger" id="eliminar-imagen">Eliminar Imagen</button>
                            <button class="btn btn-primary updateButton" data-id="{{_id}}">Actualizar</button>
                            <h4 id="updatedHeading" style="display: none;"></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}




